{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ controller_name }}! ✅</h1>
    <h2>Voici un récapitulatif de votre commande</h2>

    {% for ticket in tickets %}
        <h2>Identifiant : {{ticket.id }}</h2>
        <h2>Nom : {{ticket.LastName }}</h2>
        <h2>Prenom : {{ticket.FirstName}}</h2>
        <h2>Demi-journee : {{ticket.HalfDay}}</h2>
        <h2>Prix reduit : {{ticket.ReducedRate}}</h2>
        <h2>Date de visite : {{ticket.DateTicket|date('d,m,Y')}}</h2>
        <br/>

    {%  endfor %}


    {{ dump(app.session.get('orderPrice')) }}







</div>
{% endblock %}
